{
  "name": "Charm for Quora",
  "version": "1.1.4",
  "description": "Charm for Quora shows recommended content and boards. You can post, search, view notifications directly from the extension.",
  "browser_action": {
    "default_icon": "images/quora_16.png",
    "default_title": "Charm for Quora",
    "popup": "popup.html"
  },
  "permissions": [
    "*://*.quora.com/",
    "background",
    "contextMenus",
    "tabs"
  ],
   "background_page": "background.html",
  "icons": {
    "16": "images/quora_16.png",
    "48": "images/quora_48.png",
    "128": "images/quora_128.png"
  },
   "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["/css/content.css"],
      "js": ["/js/lib/jquery-1.7.1.min.js", "/js/common.js", "/js/lib/stopword.js","/js/content.js"]
    }
  ]
}

